<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <android.support.v7.widget.CardView
                android:layout_height="204dp" android:layout_width="match_parent" android:layout_alignParentStart="true"
                android:layout_alignParentTop="true" android:layout_marginTop="58dp"
                app:cardBackgroundColor="@android:color/darker_gray" android:layout_marginStart="0dp">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/producto"
                        android:layout_alignParentStart="true" android:layout_marginStart="31dp"
                        android:layout_alignParentTop="true" android:layout_marginTop="61dp" android:textSize="24sp"
                        android:textAlignment="center" android:textColor="@color/design_default_color_primary"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/cantidad"
                        android:layout_alignParentStart="true" android:layout_alignParentTop="true"
                        android:layout_marginTop="135dp" android:layout_marginStart="31dp"
                        android:textColor="@color/design_default_color_primary" android:textSize="36sp"
                        android:fontFamily="sans-serif-black" android:textStyle="bold" android:textAlignment="center"/>
                <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp" android:id="@+id/sumar"
                        android:background="@drawable/add" android:layout_above="@+id/cantidad"
                        android:layout_alignParentEnd="true" android:layout_marginEnd="147dp"
                        android:layout_marginBottom="-135dp"/>
                <Button
                        android:layout_width="60dp"
                        android:layout_height="60dp" android:id="@+id/restar" android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true" android:layout_marginEnd="58dp"
                        android:background="@drawable/less"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</layout>